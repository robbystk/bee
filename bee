#! /bin/bash

base='https://www.beeminder.com/api/v1/'
# user=''
# key=''


if [[ $# -ne 3 && $# -ne 4 ]]
then
    echo "Usage: $0 <goal> <day> <data> [comment]" 
    exit 1
else
    if [[ ! $3 =~ -?[0-9]+(\.[0-9]+)? ]]
    then
        echo "data must be a number"
        exit 3
    fi

    echo "${base}users/${user}.json?auth_token=$key"
    exit 0
fi
#'s/^.*"goals":\[\(.*\)\].*$/\1/'
